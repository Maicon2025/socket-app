<?xml version='1.0' encoding='utf-8'?>
<widget id="com.junior.free"
        version="1.0.1"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>InternetJuniorFree</name>

    <description>
        Aplicativo de Conexão Segura - Internet Junior Free
    </description>

    <author email="junior@stankunavicius.com"
            href="https://wa.me/5511933171664">
        Junior Stankunavicius
    </author>

    <content src="index.html" />

    <!-- Permitir acesso externo -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="*" />

    <platform name="android">

        <!-- SDK atualizado (OBRIGATÓRIO para build funcionar) -->
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="android-compileSdkVersion" value="35" />

        <!-- Permitir HTTP (caso use IP ou servidor sem HTTPS) -->
        <edit-config file="app/src/main/AndroidManifest.xml"
                     mode="merge"
                     target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>

        <!-- Permissões de rede -->
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        </config-file>

    </platform>

</widget>
